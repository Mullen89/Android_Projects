<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBckgrnd"
    tools:context="com.coms309.gk_4_projname.workout_schedule.WeekActivity">

    <TextView
        android:id="@+id/Day1"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/background_light"
        android:clickable="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:text="LEGS"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Day2"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/background_light"
        android:clickable="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="CHEST/TRI/SHOULDERS"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Day1" />

    <TextView
        android:id="@+id/Day3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/background_light"
        android:clickable="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="BACK/BI/RHOMBOID"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Day2" />

    <TextView
        android:id="@+id/Day4"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/background_light"
        android:clickable="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Day 4-Repeat Day 1"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Day3" />

    <TextView
        android:id="@+id/Day5"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/background_light"
        android:clickable="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Day 5-Repeat Day 2"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Day4" />

    <TextView
        android:id="@+id/Day6"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/background_light"
        android:clickable="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Day 6-Repeat Day 3"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Day5" />

    <TextView
        android:id="@+id/Day7"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/background_light"
        android:clickable="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="REST"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Day6" />

</android.support.constraint.ConstraintLayout>
